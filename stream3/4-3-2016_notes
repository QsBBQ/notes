# Testing
from django.test import TestCase
from .models import Post
 
class PostTests(TestCase):
    def test_str(self):
        test_title = Post(title='My Latest Blog Post')
        self.assertEquals(
                  str(test_title),
                  'My Latest Blog Post')

python manage.py test blog
